<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
      </h2>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-offset-0 col-sm-offset-2 col-xs-12 col-sm-3 form_body">
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, size: "35x5" %>
    </div>
  </div>
  <div class="col-xs-offset-0 col-sm-offset-1 col-xs-12 col-sm-3 form_body">
    <div class="field drop_down_event"> Event Type
      <br>
      <select name="event[event_type]" id="event[event_type]">
        <option>Raid</option>
        <option>Social</option>
        <option>IRL</option>
      </select>
    </div>
    <div class="field event_date">
      <%= f.label :event_date %>
      <br>
      <%= f.text_field :event_date %>
    </div>
    <div class="field time">
      <%= f.label :start_time %>
      <br>
      <%= f.text_field :start_time %>
    </div>
    <div class="field time">
      <%= f.label :end_time %>
      <br>
      <%= f.text_field :end_time %>
    </div>
  </div>
  <br>
  <div class="actions form_submit">
    <%= f.submit %>
  </div>
<% end %>
