<%= render '/shared/header' %>
    <% @topics.each do |topic| %>
      <div>
        <td><%= link_to "#{topic.title}", forum_subject_topic_discusses_path(topic_id: topic.id) %></td>
        <td><%= topic.description %></td>
        <div><%= topic.username %> - <%= topic.updated_at.strftime("%m/%d/%Y - %H:%M") %></div>
        <div class="admin_links"><%= link_to 'Destroy', forum_subject_topic_path(id: topic.id), method: :delete, data: { confirm: 'Are you sure?' } %></div> 
      </div>
      </br>
    <% end %>
    <% if current_user %>
    <%= link_to 'New Topic', new_forum_subject_topic_path %>
    <% end %>
  </div>
</body>