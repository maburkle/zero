<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-xs-offset-0 col-sm-offset-4 col-xs-12 col-sm-4 user_body">
    <div class="field">
      <%= f.label :username %>
      <br>
      <%= f.text_field :username %>
      <br>
      <%= f.label :email %>
      <br>
      <%= f.text_field :email %>
      <br>
      <%= f.label :first_name %>
      <br>
      <%= f.text_field :first_name %>
      <br>
      <%= f.label :last_name %>
      <br>
      <%= f.text_field :last_name %>
      <br>
      <%= f.label :gender %>
      <br>
      <%= f.text_field :gender %>
      <br>
      <% if current_user && current_user.admin %>
        <%= f.label :admin %>
        <br>
        <%= f.check_box :admin %>
        <br>
      <% end %>
    </div>
  </div>
  <div class="actions form_submit col-xs-offset-0 col-sm-offset-6 col-xs-12 col-sm-2">
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>

