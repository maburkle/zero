<% @newest_posts.each do |post| %>
  <div class="col-xs-offset-0 col-sm-offset-7 col-xs-12 col-sm-4 latest_user_posts">
    <%= link_to post.discuss.topic.subject.forum.title, forum_path(id: post.discuss.topic.subject.forum) %> - 
    <%= link_to post.discuss.topic.subject.title, forum_subject_path(forum_id: post.discuss.topic.subject.forum, id: post.discuss.topic.subject) %> - 
    <%= link_to post.discuss.topic.title, forum_subject_topic_path(forum_id: post.discuss.topic.subject.forum, subject_id: post.discuss.topic.subject, id: post.discuss.topic) %> 
    <br>
    <%= link_to post.discuss.title, forum_subject_topic_discuss_posts_path(forum_id: post.discuss.topic.subject.forum, subject_id: post.discuss.topic.subject, topic_id: post.discuss.topic, discuss_id: post.discuss) %>
  </div>
  <div class="newest_post_wrapper post_wrapper col-xs-offset-0 col-sm-offset-7 col-xs-12 col-sm-4">
    <div class="col-xs-4 user_post_time">
     <%= time_ago_in_words(post.updated_at) %> ago
    </div>
    <div class="col-xs-8 user_post_area">
  	 <%= post.description %>
    </div>
  </div> 
<% end %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', :back %>
